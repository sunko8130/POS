<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/md_blue_grey_100"
        app:cardCornerRadius="2dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:stretchColumns="*">

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/receive_date" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_receive_date"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/distributor" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_receiver_name"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/amount" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_amount"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <org.mmtextview.components.MMButton
                android:id="@+id/btn_view_detail"
                style="@style/smallButtonStyle"
                android:text="@string/view_detail" />

        </TableLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>