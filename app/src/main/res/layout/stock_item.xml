<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardBackgroundColor="@color/md_blue_grey_100"
        app:cardCornerRadius="2dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:stretchColumns="*">

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/item_code" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_item_code"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />

            </TableRow>

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/item_name" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_item_name"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/total_in" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_total_in"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/total_out" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_total_out"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow>

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/out_of_stock" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_balance"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>

            <TableRow
                android:visibility="gone">

                <org.mmtextview.components.MMTextView
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    android:text="@string/uom" />

                <org.mmtextview.components.MMTextView
                    android:id="@+id/tv_uom"
                    style="@style/textViewStyle"
                    android:layout_span="2"
                    tool:text="textView" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>